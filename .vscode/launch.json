    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Tests Effector unit",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/packages/effector",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand",
                "--roots=${workspaceRoot}/packages/effector",
                "--filter=",
                "unit.test.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Debug Jest Tests Effector fork",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/packages/effector",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand",
                "--roots=${workspaceRoot}/packages/effector",
                "--filter=",
                "fork.test.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        }
    ]
}
